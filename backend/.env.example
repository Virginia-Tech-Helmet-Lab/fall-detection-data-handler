# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-use-a-long-random-string
APP_NAME=Fall Detection Data Handler

# JWT Configuration  
JWT_SECRET_KEY=your-jwt-secret-key-here-use-a-different-long-random-string
JWT_EXPIRATION_HOURS=2

# Database Configuration
# For PostgreSQL: postgresql://username:password@localhost:5432/fall_detection
# For SQLite: sqlite:///./instance/fall_detection.db
DATABASE_URL=postgresql://falldetection:password@localhost:5432/fall_detection

# Security Configuration
BCRYPT_LOG_ROUNDS=13
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=false
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# CORS Configuration (comma-separated list)
# Example: http://192.168.1.100:3000,http://192.168.1.100:5000
CORS_ORIGINS=http://localhost:3000

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=104857600

# Rate Limiting (requires Redis)
# For Redis: redis://localhost:6379/0
# For in-memory (development only): memory://
REDIS_URL=redis://localhost:6379/0
RATELIMIT_DEFAULT=60 per hour

# Email Configuration (for notifications)
ADMIN_EMAIL=admin@yourorganization.com
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Session Security
SESSION_COOKIE_SECURE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log